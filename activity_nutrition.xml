<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart Nutrition Tracker"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/accent"
            android:layout_marginBottom="16dp" />

        <!-- Calorie Tracking -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Calorie Tracking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <ProgressBar
                    android:id="@+id/progressBarCalories"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:max="100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvCurrentCalories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current: 0 cal"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvRemainingCalories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remaining: 2000 cal"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal: 2000 calories"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Meal Tracking -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track Your Meal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take a photo of your meal for AI analysis"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTrackMeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take Photo"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Meals:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvMealHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No meals tracked yet"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Water Intake -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration Tracking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvWaterIntake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Intake: 0 glasses"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvWaterStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start tracking your water intake!"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Glass of Water"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- AI Meal Suggestions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Meal Suggestions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGenerateMealPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate Personalized Meal Plan"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <ProgressBar
                    android:id="@+id/progressBarMealPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvMealPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click 'Generate Personalized Meal Plan' to get AI-powered meal suggestions based on your calorie goals and preferences"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nutrition Tips -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Nutrition Tips"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNutritionTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Nutrition Tip"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <ProgressBar
                    android:id="@+id/progressBarTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvNutritionTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click 'Get Nutrition Tip' for personalized nutrition advice"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>